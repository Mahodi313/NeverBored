@page
@model NeverBored.Pages.ActivityView.FavoriteViewModel
@{
}

@if (Model.FavoriteActivites != null && Model.FavoriteActivites.Any())
{
    <div class="container mt-4">
        <h1 class="text-center">Favorite Activities</h1>
        <hr />

        @foreach (var activity in Model.FavoriteActivites)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@activity.Name</h5>
                    <p class="card-text">Type: @activity.Type</p>
                    <form method="post">
                        <input type="hidden" name="id" value="@activity.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No favorite activities found.</p>
}
